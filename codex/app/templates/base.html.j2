<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.png') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
              crossorigin="anonymous">
        <link rel="stylesheet"
              type="text/css"
              href="{{ url_for('static',filename='prism.css') }}">
        <link rel="stylesheet"
              type="text/css"
              href="{{ url_for('static',filename='style.css') }}">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
              rel="stylesheet">
        <title>
            {% block title %}
            {% endblock title %}
        </title>
        <meta charset="utf-8" />
        <meta name="keywords" content="dft,vasp,quantum-espresso" />
        <meta name="description"
              content="Density Functional Theory Comprehensive Documentation Explorer" />
    </head>
    <body>
        <div class="bg-primary-subtle rounded-lg p-4">
            <h3>Welcome to the DFT-CODEX Pre-Alpha</h3>
            <p class="lead">
                This is a pre-alpha version of the web app. Expect many bugs and a rough user interface. Please report any bugs or feature requests on <a href="https://github.com/oashour/dft-codex/issues">GitHub</a>.
            </p>
        </div>
        <nav class="navbar navbar-expand-lg bg-info">
            <div class="container-fluid justify-content-start">
                <a class="navbar-brand" href="{{ url_for("main.index") }}">{{ config.NAME }}</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-nav ms-auto" id="navbarNav">
                    <a class="nav-link active"
                       aria-current="page"
                       href="{{ url_for("main.index") }}">Home</a>
                    <a class="nav-link" href="{{ url_for("api-docs.openapi_swagger_ui") }}">API</a>
                    <a class="nav-link" href="https://github.com/oashour/dft-codex">GitHub</a>
                    <span class="d-inline-block"
                          tabindex="0"
                          data-bs-toggle="tooltip"
                          data-bs-title="Coming Soon"
                          data-bs-placement="bottom">
                        <a class="nav-link" disabled>Documentation</a>
                    </span>
                    <button class="btn btn-primary"
                            id="btn-theme-switch"
                            data-bs-toggle="tooltip"
                            data-bs-title="Switch Theme"
                            data-bs-placement="bottom">
                        <iconify-icon icon="mdi:theme-light-dark"></iconify-icon>
                    </button>
                </div>
            </div>
        </nav>
        <div class="container">
            {% with messages = get_flashed_messages() %}
                {% if messages %}
                    <div class="alert alert-primary" role="alert">
                        <!-- <button class="delete"></button> -->
                        {% for message in messages %}<li>{{ message }}</li>{% endfor %}
                    </div>
                {% endif %}
            {% endwith %}
            {% block body %}
            {% endblock body %}
        </div>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
                crossorigin="anonymous"></script>
        <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
        <script>
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
            const isDark = window.matchMedia("(prefers-color-scheme:dark)")
            if (isDark.matches) {
                document.documentElement.setAttribute('data-bs-theme','dark')
            }
            else {
                document.documentElement.setAttribute('data-bs-theme','light')
            }
            document.getElementById('btn-theme-switch').addEventListener('click',()=>{
                if (document.documentElement.getAttribute('data-bs-theme') == 'dark') {
                    console.log('switch to light')
                    document.documentElement.setAttribute('data-bs-theme','light')
                }
                else {
                    console.log('switch to dark')
                    document.documentElement.setAttribute('data-bs-theme','dark')
                }
            })
        </script>
        {% block scripts %}
        {% endblock scripts %}
    </body>
</html>
