<div class="btn-group mx-3 float-end control-buttons"
     role="group"
     aria-label="Controls"
     data-cdxid="{{ codex.cdxid }}"
     data-codextype="{{ codex.codex_type }}">
    <input type="checkbox"
           class="btn-check show-comments"
           id="btn-show-comments-{{ codex.cdxid }}"
           checked
           autocomplete="off">
    <label class="btn btn-outline-primary"
           for="btn-show-comments-{{ codex.cdxid }}">Hide Comments</label>
    <div class="btn-group" role="group">
        <button type="button"
                class="btn btn-primary dropdown-toggle"
                data-bs-toggle="dropdown"
                aria-expanded="false">Download/Share</button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item copy-link">Copy Link</a>
            </li>
            <li>
                <a class="dropdown-item copy-id">Copy ID</a>
            </li>
            <li>
                <a class="dropdown-item copy-contents" {{ 'hidden' if codex_type != 'file' }}>Copy Contents</a>
            </li>
            <li>
                <a class="dropdown-item"
                   data-bs-toggle="modal"
                   data-bs-target="#downloadModal-{{ codex.cdxid }}">Download</a>
            </li>
        </ul>
    </div>
</div>
